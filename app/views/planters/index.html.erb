<p id="notice"><%= notice %></p>

<h1>Listing Planters</h1>


<% if user_signed_in? and current_user.admin? %>

<table>
  <thead>
  <tr>
    <th>name</th>
    <th>Brief desc</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @planters.each do |planter| %>
      <tr>
        <td><%= planter.name %></td>
        <td><%= planter.brief_desc.first(10) %></td>

        <td><%= link_to 'Show', planter %></td>
        <% if policy(planter).edit? %>
            <td><%= link_to 'Edit', edit_planter_path(planter) %></td>
        <% end %>
        <% if policy(planter).destroy? %>
            <td><%= link_to 'Destroy', planter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Planter', new_planter_path %>


<% end %>



<section class="wrap clearfix ">

  <div class="cwrap">
    <header class="s-title">
    </header>

    <!--entries-->

    <div class="entries row">
      <% Planter.all.each do |planter| %>
          <%= render 'planters/sample' , :p => planter %>
      <% end %>
    </div>

    <div class="quicklinks">
      <%= link_to "همه گیاهان" , planters_path , class: "button" %>
      <a href="javascript:void(0)" class="button scroll-to-top">
        برگرد بالا
      </a>
    </div>

    <!--//entries-->
  </div>
  <!--//cwrap-->

</section>
