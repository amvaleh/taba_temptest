<section class="content center full-width wow fadeInDown animated">
<div class="modal container make_right">
<h2 class="center">
وارد حساب کاربری خود شوید

</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class= "field">
    <%= f.label "ایمیل", :class=>"" %><br />
    <%= f.email_field :email, autofocus: true , :class => "form-control make_center" %>
  </div>
      </br>


  <div class="field">

    <%= f.label "رمز عبور", :class=>"" %><br />
    <%= f.password_field :password, autocomplete: "off"  , :class => "form-control make_center" %>
  </div>

  <!--<% if devise_mapping.rememberable? -%>-->
    <!--<div class= "pull-left">-->
      <!--<%= f.check_box :remember_me %>-->
      <!--<%= f.label :remember_me %>-->
    <!--</div>-->
  <!--<% end -%>-->
    </br>
  <div class="actions make_center">
    <%= f.submit "وارد شو", :class=>"btn btn-default btn-block" %>
  </div>
<% end %>

<br>
<br>
  <br>
  <div class="row">

    <div class="one-half">
      <%= link_to "رمز عبورم را فراموش کرده ام", new_password_path(resource_name),class: "btn btn-default pull-left" %><br />
    </div>
    <div class="one-half">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to " می خواهم ثبت نام کنم", new_registration_path(resource_name),class: "btn btn-default" %><br />
    <% end -%>
  </div>
  </div>
  </div>
  </br>
</div>


</section>
