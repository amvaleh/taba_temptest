<div class="entry one-fourth wow fadeInLeft">
  <figure>
    <% if post.image.present? %>
        <%= image_tag post.image_url(:medium) , style: "width: 100%;max-height: 225px; height: 225px;" %>
    <% else %>
        <img src="/assets/default_plant.png" alt="" />
    <% end %>
    <figcaption>
      <%= link_to post do %>
          <i class="ico i-view"></i>
          <span>
			<%= truncate(post.content, :length => 20) %>
            </span>
      <% end %>
    </figcaption>
  </figure>
  <div class="container make_right">
    <h2>
      <%= link_to post do %>
          <%= truncate(post.title, :length => 30) %>
      <% end %>
    </h2>
    <div class="actions">
      <div>
        <div class="likes" style="text-align: left">
          <%= link_to(plant_path(post.plant),:class=>"" )do %>
              <small>
              <i class="ico i-smallplant"></i>
              <%= post.plant.name %>
              </small>
          <% end %>
        </div>
        <!--<div class="likes">-->
          <!--<i class="ico i-likes"></i>-->
        <!--</div>-->
        <div class="comments">
          <%= link_to post_path(post) do %>
              <i class="ico i-comments"></i>
              <%= post.comments.count %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
