<%= form_for(@plant_nutrition) do |f| %>
  <% if @plant_nutrition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant_nutrition.errors.count, "error") %> prohibited this plant_nutrition from being saved:</h2>

      <ul>
      <% @plant_nutrition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nutrition_id %><br>
    <%= f.select :nutrition_id , options_for_select(Nutrition.all.map {|s| [s.name, s.id]}) %>
  </div>

  <div class="field">
    <%= f.label :plant_id %><br>
    <%= f.number_field :plant_id , value: @plant.id %>
  </div>
  <div class="field">
    <%= f.label :season %><br>
    <%= f.select :season_id , options_for_select(Season.all.map {|s| [s.name, s.id]}) %>
  </div>
  <div class="field">
    <%= f.label :time_space %><br>
    <%= f.select :time_space , ['ماه','هفته','روز'] %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.number_field :time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
