<h1>Listing Waterings</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Times</th>
      <th>Time space</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @waterings.each do |watering| %>
      <tr>
        <td><%= watering.season.name %></td>
        <td><%= watering.times %></td>
        <td><%= watering.time_space %></td>
        <td><%= link_to 'Edit', edit_watering_path(watering,:plant => @plant) %></td>
        <td><%= link_to 'Destroy', watering, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Watering', new_watering_path(:plant=>@plant),class:"btn btn-info" %>
