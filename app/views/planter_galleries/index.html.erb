<p id="notice"><%= notice %></p>

<h1>Listing Planter Galleries</h1>

<table>
  <thead>
    <tr>
      <th>Planter</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planter_galleries.each do |planter_gallery| %>
      <tr>
        <td><%= planter_gallery.planter_id %></td>
        <td><%= planter_gallery.avatar %></td>
        <td><%= link_to 'Show', planter_gallery %></td>
        <td><%= link_to 'Edit', edit_planter_gallery_path(planter_gallery) %></td>
        <td><%= link_to 'Destroy', planter_gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

