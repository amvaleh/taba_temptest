<p id="notice"><%= notice %></p>

<h1>Listing Leaf Shapes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaf_shapes.each do |leaf_shape| %>
      <tr>
        <td><%= leaf_shape.name %></td>
        <td><%=image_tag leaf_shape.avatar_url(:thumb) %></td>
        <td><%= link_to 'Show', leaf_shape %></td>
        <td><%= link_to 'Edit', edit_leaf_shape_path(leaf_shape) %></td>
        <td><%= link_to 'Destroy', leaf_shape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

