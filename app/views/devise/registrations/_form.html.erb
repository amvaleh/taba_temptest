<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <div class="f-row rtl_dir" >
      <div class="third last pull-right">
        <span class="req">*</span>
        <%= f.email_field :email, autofocus: true , :placeholder => "ایمیل"  , :class=>"make_center" %>
      </div>

      <div class="third pull-right">
        <%= f.password_field :password, autofocus: true, :placeholder=>  "رمز عبور (حداقل ۳ حرف)"  , :class=>"make_center" %>
        <span class="req">*</span>
      </div>

      <div class="third">
        <%=f.password_field :password_confirmation, autocomplete: "off",:placeholder=>"تکرار رمز عبور" , :class=>"make_center"%>

        <span class="req">*</span>
      </div>



    </div>

    <div style="display:table; margin:0 auto;">
      <%=show_simple_captcha %>
    </div>
    </br>

    <div class="actions make_center">
      <%= f.submit "ثبت نام", :class=>"button"%>
    </div>

